<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="Theme.DentalFirst" parent="android:Theme.Material.Light.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="android:windowActionBar">false</item>
        <item name="android:windowNoTitle">true</item>
    </style>

    <style name="SplashScreen" parent="Theme.SplashScreen">
        <item name="windowSplashScreenAnimatedIcon">@drawable/dental_first</item>
        <item name="windowSplashScreenIconBackgroundColor">@android:color/transparent</item>
        <item name="windowSplashScreenBackground">#1634F0</item>
        <item name="android:windowActionBar">false</item>
        <item name="android:windowNoTitle">true</item>
        <item name="postSplashScreenTheme">@style/Theme.DentalFirst</item>
    </style>
</resources>